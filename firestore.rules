
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all access to prevent unauthorized access.
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read, update, and delete their own user document.
    // Any authenticated user can create a user document (on signup).
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Authenticated users can read suppliers and reviews.
    // Any authenticated user can create a review.
    match /suppliers/{supplierId} {
      allow read: if request.auth.uid != null;
    }
    match /reviews/{reviewId} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid != null;
    }
    
    // --- CORRECTED STOCK ITEM RULES ---
    match /stockItems/{itemId} {
      // Allow read/update/delete IFF the user is the owner of the item.
      allow read, update, delete: if request.auth.uid == resource.data.ownerId;
      // Allow create IFF the incoming document's ownerId matches the user's ID.
      allow create: if request.auth.uid == request.resource.data.ownerId;
    }
    
    // Bids can be read by any authenticated user and created by any authenticated user.
    // The bid owner (vendor) can update the bid (e.g., to award it).
    match /bids/{bidId} {
        allow read, create: if request.auth.uid != null;
        allow update: if request.auth.uid == resource.data.vendorId;

        // Proposals can be read by the vendor or the proposing supplier.
        // Any authenticated user can create a proposal.
        // Updates for negotiation are allowed by either party.
        match /proposals/{proposalId} {
            allow read: if request.auth.uid == resource.data.vendorId || request.auth.uid == resource.data.supplierId;
            allow create: if request.auth.uid != null;
            allow update: if request.auth.uid == resource.data.vendorId || request.auth.uid == resource.data.supplierId;
        }
    }

    // Orders can only be read or updated by the vendor or supplier involved.
     match /orders/{orderId} {
        allow read, update: if request.auth.uid == resource.data.vendorId || request.auth.uid == resource.data.supplierId;
        allow create: if request.auth.uid == request.resource.data.vendorId;
     }
  }
}
